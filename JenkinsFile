pipeline {
    agent any

    options {
        skipDefaultCheckout(true) // prevent automatic checkout before we clean
    }

    stages {
        stage('Clean Workspace') {
            steps {
                // Use 'cleanWs' plugin if available (safer)
                cleanWs() 
                
                // OR use shell cleanup if you really want everything gone
                // sh 'rm -rf * .git'
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/babu120987/070126.git',
                    credentialsId: '' // leave blank if public repo
            }
        }

        // Add other stages below
        stage('Build') {
            steps {
                echo "Building..."
                // your build steps
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                // your test steps
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
