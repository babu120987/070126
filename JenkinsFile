pipeline {
    agent {
        docker {
            image 'abhishekf5/maven-abhishek-docker-agent:v1'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {

        stage('Checkout') {
            steps {
                sh 'echo passed'
                // Replace this with your actual git checkout if needed
                // git branch: 'master', url: 'https://github.com/your-repo.git'
            }
        }

        stage('Build') {
            steps {
                sh 'ls -ltr'
                sh 'mvn clean package'  // compiles and packages your app
            }
        }

        stage('Test') {
            steps {
                echo 'Running Maven Tests...'
                sh 'mvn test'  // explicitly run tests
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Build and Tests passed!'
        }
        failure {
            echo 'Build or Tests failed!'
        }
    }
}
stage('Clean Workspace') {
    steps {
        echo "Cleaning workspace..."
        sh 'rm -rf * .??*' // removes all files including hidden ones
    }
}
